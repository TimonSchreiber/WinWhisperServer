{
  "Urls": "http://0.0.0.0:5162",
  "Whisper": {
    "ExecutablePath": "whisper/faster-whisper-xxl.exe",
    "Model": "medium",
    "Language": "",
    "Additional Arguments": "",
    "OutputFormats": ["json", "srt"]
  },
  "Jobs": {
    "MaxConcurrent": 1,
    "CompletedJobRetentionMinutes": 10,
    "OrphanedMaxAgeMinutes": 30
  },
  "Upload": {
    "MaxFileSizeMB": 30
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.File",
      "Serilog.Sinks.EventLog",
      "Serilog.Expressions"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.Hosting": "Warning",
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "logs/general-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 14,
          "restrictedToMinimumLevel": "Information"
        }
      },
      {
        "Name": "Logger",
        "Args": {
          "configureLogger": {
            "Filter": [
              {
                "Name": "ByIncludingOnly",
                "Args": {
                  "expression": "@Properties['EventType'] like 'Job%'"
                }
              }
            ],
            "WriteTo": [
              {
                "Name": "File",
                "Args": {
                  "path": "logs/jobs-.log",
                  "rollingInterval": "Day",
                  "retainedFileCountLimit": 14
                }
              }
            ]
          }
        }
      },
      {
        "Name": "Logger",
        "Args": {
          "configureLogger": {
            "Filter": [
              {
                "Name": "ByIncludingOnly",
                "Args": {
                  "expression": "@Properties['EventType'] in ['JobStarted','JobFailed']"
                }
              }
            ],
            "WriteTo": [
              {
                "Name": "EventLog",
                "Args": {
                  "source": "WinWhisperServer"
                }
              }
            ]
          }
        }
      }
    ]
  },
  "AllowedHosts": "*"
}
